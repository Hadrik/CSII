<UserControl x:Class="Cv7.FormRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Cv7"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

    <DockPanel Margin="5">
        <Label Content="{Binding LabelText, RelativeSource={RelativeSource AncestorType=local:FormRow}}" Width="90" />
        <TextBox Text="{Binding Value, RelativeSource={RelativeSource AncestorType=local:FormRow}}"
                 VerticalContentAlignment="Center" />
    </DockPanel>
</UserControl>